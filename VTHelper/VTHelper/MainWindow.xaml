<Window x:Class="VTHelper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VTHelper"
        mc:Ignorable="d"
        Title="MainWindow" Height="440" Width="500" MinWidth="500" MinHeight="440" MaxWidth="600" MaxHeight="500">
    <Grid>
        <StackPanel HorizontalAlignment="Left" Width="334" Margin="159,0,0,0" Name="ScanDomain_Panel" Visibility="Hidden">
            <Label Content="Scan domain"/>
            <StackPanel Orientation="Horizontal" Height="100" Width="300">
                <Label  Content="Domain:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox Name="DomainName_TextBox"  TextWrapping="Wrap" Height="20" Width="200" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Content="Get domain report" Width="144" Click="GetDomainReportBtn_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Left" Width="334" Margin="159,0,0,0" Name="ScanFile_Panel">
            <Label Content="Scan file"/>
            <StackPanel Orientation="Horizontal" Height="100" Width="300">
                <Label  Content="File:" HorizontalAlignment="Left" VerticalAlignment="Center" />
                <TextBox Name="FileName_TextBox"  TextWrapping="Wrap" Height="20" Width="200" Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Height="20" Content="Select file" Click="GetFileReportBtn_Click"/>
            </StackPanel>
            <Button Content="Scan file" Width="144" Click="GetDomainReportBtn_Click"/>
        </StackPanel>
        <StackPanel Margin="0,0,334.333,-0.333" Background="#FF292728" HorizontalAlignment="Right" Width="159">
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Scan file" Foreground="White" Click="Button_Click_1"/>
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Get file report" Foreground="White"/>
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Scan domain" Foreground="White" Click="Button_Click"/>
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Scan IP" Foreground="White"/>
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="Settings" Foreground="White"/>
            <Button Height="54" Width="159" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Content="About" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
