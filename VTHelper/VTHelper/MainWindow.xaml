        <StackPanel HorizontalAlignment="Stretch" Margin="159,0,0,0" Name="ScanFile_Panel" Visibility="Hidden">
            <StackPanel Orientation="Horizontal" Background="DimGray" Width="Auto" Height="64">
                <Label></Label>
                <Image Source="pack://siteoforigin:,,,/Resources/256_scan_file.png" Width="48" Height="48"></Image>
                <Label Content="Scan file" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Stretch">
                <StackPanel.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </StackPanel.Background>

                <StackPanel Orientation="Horizontal" Width="520" Height="60" >
                    <Label  Content="File:" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBox Name="FileName_TextBox"  TextWrapping="Wrap" Height="28" Width="350" 
                         HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" TextAlignment="Center"/>
                    <Label Width="10"></Label>

                    <Button Height="32"  Width="155" Click="SelectFileBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/256_about.png" Width="32"/>
                            <Label Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">Select file</Label>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Height="50" HorizontalAlignment="Stretch">
                <StackPanel.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveBorderColorKey}}"/>
                </StackPanel.Background>

                <StackPanel Orientation="Horizontal" Width="310">
                    <Button Height="32"  Width="155" Click="ScanFileBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/256_about.png" Width="32"/>
                            <Label Width="100" HorizontalAlignment="Center" VerticalAlignment="Center">Scan file</Label>
                        </StackPanel>
                    </Button>
                    <Button Height="32"  Width="155" Click="GetFileReportBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="pack://siteoforigin:,,,/Resources/256_flle_report.png" Width="32"/>
                            <Label Width="110" HorizontalAlignment="Center" VerticalAlignment="Center">Get file report</Label>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel Height="82" Name="FilePermlinkPanel" HorizontalAlignment="Stretch" Visibility="Collapsed">
                <StackPanel.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
                </StackPanel.Background>
                <StackPanel Orientation="Vertical" Height="82" Width="200" HorizontalAlignment="Center">
                    <Label Content="Permlink:" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
                    <Label Name="FileScanPermlink_Lbl" Content="(Unknown)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Height="82" Name="FileScorePanel" HorizontalAlignment="Stretch">
                <StackPanel.Background>
                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.MenuColorKey}}"/>
                </StackPanel.Background>
                <StackPanel Orientation="Vertical" Height="82" Width="200" HorizontalAlignment="Center">
                    <Label Content="File safety:" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" />
                    <Image Name="FileScore_Icon" Source="pack://siteoforigin:,,,/Resources/256_warning.png" Width="32"/>
                    <Label Name="FileScore_Lbl" Content="(Unknown)" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>

            <ScrollViewer Height="230" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel HorizontalAlignment="Stretch" Name="FileDetails_Stack">
                    <Label Content="MD5:">
                        <Label.Background>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
                        </Label.Background>
                    </Label>
                    <Label Name="FileReportMD5_Lbl"/>

                    <Label Content="SHA1:">
                        <Label.Background>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
                        </Label.Background>
                    </Label>
                    <Label Name="FileReportSHA1_Lbl"/>

                    <Label Content="SHA256:">
                        <Label.Background>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
                        </Label.Background>
                    </Label>
                    <Label Name="FileReportSHA256_Lbl"/>

                    <Label Content="Detection report:">
                        <Label.Background>
                            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
                        </Label.Background>
                    </Label>
                    <Grid ShowGridLines="True">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="210" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="70" />
                            <ColumnDefinition Width="120" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Label Content="Type" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                        <Label Content="Detected" Grid.Row="1" Grid.Column="1" FontWeight="Bold"/>
                        <Label Content="Total" Grid.Row="1" Grid.Column="2" FontWeight="Bold"/>
                        <Label Content="Scan date" Grid.Row="1" Grid.Column="3" FontWeight="Bold"/>
                        <Label Content="Link" Grid.Row="1" Grid.Column="4" FontWeight="Bold"/>

                        <Label Content="Detected URLs:" Grid.Row="2" Grid.Column="0"/>
                        <Label Name="FileReportPositives_Lbl" Content="0" Grid.Row="2" Grid.Column="1"/>
                        <Label Name="FileReportTotalEngines_Lbl" Content="0" Grid.Row="2" Grid.Column="2"/>
                        <Label Name="FileReportDate_Lbl" Grid.Row="2" Grid.Column="3"/>
                        <Label Grid.Row="2" Grid.Column="4">
                            <Hyperlink Name="FileReportLink" Click="FileReportLink_Click">Link</Hyperlink>
                        </Label>

                        <Label Name="FileReportAV0Name_Lbl" Content="0" Grid.Row="3" Grid.Column="0"/>
                        <Label Name="FileReportAV0VirusName_Lbl" Content="0" Grid.Row="3" Grid.Column="1"/>
                        <Label Name="FileReportAV0Update_Lbl" Grid.Row="3" Grid.Column="2"/>
                        <Label Name="FileReportAV0Version_Lbl" Grid.Row="3" Grid.Column="3"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
